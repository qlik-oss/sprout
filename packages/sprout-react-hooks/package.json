{
  "name": "@qlik/sprout-react-hooks",
  "version": "1.2.4",
  "homepage": "https://github.com/qlik/sprout#readme",
  "bugs": {
    "url": "https://github.com/qlik/sprout/issues"
  },
  "repository": "https://github.com/qlik/sprout.git",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./lib/index.js"
    }
  },
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "build:watch": "tsc -p tsconfig-build.json --watch",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf playwright-report test-results playwright/.cache lib",
    "format:check": "prettier --check ./** --ignore-unknown",
    "format:write": "prettier --write ./** --ignore-unknown",
    "lint": "eslint . --max-warnings=0",
    "lint:es": "eslint . --max-warnings=0",
    "lint:style": "stylelint ./**/*.css",
    "pretest": "playwright install --with-deps",
    "test": "pnpm test:playwright",
    "test:playwright": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "@qlik/design-tokens": "workspace:*",
    "@qlik/sprout-css-modules": "workspace:*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@faker-js/faker": "^10.3.0",
    "@playwright/experimental-ct-react": "^1.58.2",
    "@playwright/test": "^1.58.2",
    "@qlik/eslint-config": "^1.4.18",
    "@qlik/prettier-config": "^0.4.33",
    "@qlik/stylelint-config-sprout": "workspace:*",
    "@qlik/tsconfig": "^0.3.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "axe-core": "^4.11.1",
    "cpx2": "^8.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-storybook": "^10.2.8",
    "glob": "^13.0.2",
    "prettier": "^3.8.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "release-it": "^19.2.4",
    "rimraf": "^6.1.2",
    "stylelint": "^17.2.0",
    "stylelint-config-css-modules": "^4.6.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
