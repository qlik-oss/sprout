{
  "name": "sprout",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:watch": "pnpm run --parallel build:watch",
    "check": "pnpm check-types && pnpm lint && pnpm format:check && pnpm test",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && pnpm clean:cache",
    "clean:cache": "rimraf */*/.turbo .turbo */*/node_modules/.cache node_modules/.cache",
    "clean:install": "rimraf node_modules */*/node_modules",
    "format:check": "turbo run format:check",
    "format:write": "turbo run format:write",
    "lint": "turbo run lint",
    "prepare": "husky",
    "prepare-release": "changeset",
    "publish-packages": "changeset publish",
    "storybook:build": "pnpm --filter \"@qlik/storybook\" run storybook:build",
    "storybook:start": "concurrently \"pnpm run build:watch\" \"pnpm --filter @qlik/storybook run storybook:start\"",
    "test": "turbo run test"
  },
  "prettier": "@qlik/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@qlik/prettier-config": "^0.4.33",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.3"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "updateConfig": {
      "ignoreDependencies": [
        "eslint",
        "react",
        "react-dom"
      ]
    }
  }
}
